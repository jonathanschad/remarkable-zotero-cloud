{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["src/**/*", "types/declarations.d.ts"],
    "exclude": ["node_modules"]
}
